"#lbl": {
	color : "#0000FF",
	text : "Separate multiple emails with comma (,)",
	width : "95%",
	top : 1,

	font : {
		fontSize : "10dp",
		fontStyle: "italic",
		fontFamily: "Open Sans"
	}
},

"#lbl[platform=android]":{
	font : {
		fontSize : "10dp",
		fontFamily: "OpenSans-Italic"
	}
},

"#lblTitle": {
	textAlign : "center",
	height : Ti.UI.SIZE,
	width : "100%",
	text : "Send Mail",

	font : {
		fontSize : "18dp",
		fontWeight : "bold",
		fontFamily : "Open Sans"
	}
},

"#lblTitle[platform=android]": {
	font: {
		fontSize : "18dp",
		fontFamily : "OpenSans-Bold"
	}
},

"Label": {
	color : "#FFFFFF",
	height : 30,

	font : {
		fontSize : "16dp",
		fontFamily : "Open Sans"
	}
},

